---
import { skills } from "../data/skills.ts";
import SkillCard from "../components/SkillCard.astro";
---
<style>
  .page-skills {
    padding-top: 8vh;
    font-family: var(--font-family-intro);
    min-height: var(--height-default);
    align-items: center;
  }
  .skills-title {
    position: relative;
    font-size: 2vw;
    color: var(--color-text-default);
    font-weight: bold;
    text-align: center;
  }

  .skills-category {
    position: relative;
    font-size: 1.5vw;
    color: var(--color-text-default);
    font-weight: 400;
    text-align: center;
  }

  .skills-grid {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 6vw;
    margin-bottom: 4vh;
  }
</style>

<section class="page-skills" id="skills">
  <p class="skills-title animate-fade-in">Skills</p>
  {
    skills.map((category) => (
      <div>
        <p class="skills-category">{category.category}</p>
        <div class="skills-grid">
          {category.items.map((skill) => (
            <SkillCard name={skill.name} icon={skill.icon} />
          ))}
        </div>
      </div>
    ))
  }
</div>

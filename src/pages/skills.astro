---
import { skills } from "../data/skills.ts";
import SkillCard from "../components/SkillCard.astro";
---

<style>
  .page-skills {
    display: flex;
    position: relative;
    flex-direction: column;
    text-align: center;
    justify-content: center;
    align-items: center;
    font-family: var(--font-family-intro);
  }
  .skills-title {
    position: relative;
    font-size: var(--font-size-xxl);
    color: var(--color-text-default);
    font-weight: bold;
    margin: var(--spacing-md);
  }

  .skills-category {
    position: relative;
    font-size: var(--font-size-xl);
    color: var(--color-text-default);
    font-weight: var(--font-weight-medium);
    text-align: center;
  }

  .skills-grid {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
  }
</style>

<section class="page-skills" id="skills">
  <p class="skills-title animate-fade-in">Skills</p>
  {
    skills.map((category) => (
      <div>
        <p class="skills-category">{category.category}</p>
        <div class="skills-grid">
          {category.items.map((skill) => (
            <SkillCard name={skill.name} icon={skill.icon} />
          ))}
        </div>
      </div>
    ))
  }
</section>

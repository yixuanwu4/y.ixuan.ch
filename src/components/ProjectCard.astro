---
import CardContent from "./CardContent.astro";

interface Props {
  contentTitle: string;
  contentImg: string;
  contentIntro: string;
  contentLink: string;
  tags?: Array<string>;
}

const {contentTitle, contentImg, contentIntro, contentLink, tags} = Astro.props;
---
<div class="projectCard">
  <div class="preview">
    <img src={contentImg} />
  </div>
  <CardContent
    title={contentTitle}
    description={contentIntro}
    link={contentLink}
    tags={tags}
   />
</div>

<style>
  .projectCard {
    padding: var(--spacing-md);
    display: flex;
    justify-content: space-between;
    gap: var(--spacing-md);
    color: var(--color-text-para);
    border: solid transparent;
    border-width: 0.1px 0 0 0.1px;
  }
  .projectCard:hover {
    background-color: var(--color-project-card-bg);
    box-shadow: inset 0 0 15px rgba(135, 135, 135, .1), 0 0 18px 3px rgba(0, 0, 0, .3);
    border: solid var(--color-text-unselect);
    border-width: 0.1px 0 0 0.1px;
    border-radius: 5px;
  }
  .projectCard:hover :global(.contentTitle){
    color: var(--color-text-bubble);
  }
  .projectCard:hover :global(.contentTitle svg) {
    transform: translate(2px, -2px);
    transition: all 0.3s ease;
  }
  .cardContent p {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-light);
    line-height: 1.5;
    word-break: break-word;
  }
  .preview img {
    height: var(--height-xxl);
    border: var(--color-text-unselect) 2px solid;
  }

  .tags ul {
    display: flex;
    gap: var(--spacing-sm);
    padding: 0;
    list-style-type: none;
    margin-bottom: 0;
  }
  .tags li {
    font-size: var(--font-size-xs);
    color: var(--color-text-bubble);
    background-color:rgba(237, 253, 252, 0.2);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 20px;
    margin: 0;
  }
</style>
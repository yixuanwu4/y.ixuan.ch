---
import TopRight from "~icons/mdi/arrow-top-right";

interface Props {
  projectName: string;
  projectImg: string;
  projectIntro: string;
  projectLink: string;
  projectSkills?: Array<string>;
}

const {projectName, projectImg, projectIntro, projectLink, projectSkills} = Astro.props;
---
<div class="projectCard">
  <div class="preview">
    <img src={projectImg} />
  </div>
  <div class="projectInfo">
    <a href={projectLink} class="projectName">
      {projectName}
      <TopRight />
    </a>
    <p> {projectIntro}</p>
    {
    projectSkills && projectSkills.length > 0 && (
      <div class="projectSkills">
        <ul>
          {projectSkills.map(skill => <li>{skill}</li>)}
        </ul>
      </div>
    )
  }
  </div>
</div>

<style>
  .projectCard {
    padding: var(--spacing-md);
    display: flex;
    justify-content: space-between;
    gap: var(--spacing-md);
    color: var(--color-text-para);
    border: solid transparent;
    border-width: 0.1px 0 0 0.1px;
  }
  .projectCard:hover {
    background-color: var(--color-project-card-bg);
    box-shadow: inset 0 0 15px rgba(135, 135, 135, .1), 0 0 18px 3px rgba(0, 0, 0, .3);
    border: solid var(--color-text-unselect);
    border-width: 0.1px 0 0 0.1px;
    border-radius: 5px;
  }
  .projectName {
    font-size: var(--font-size-md);
    text-decoration: none;
    align-items: baseline;
    color: var(--color-text-default);
    display: inline-flex;
    align-items: center; 
  }
  .projectCard:hover .projectName{
    color: var(--color-text-bubble);
  }
  .projectInfo svg {
    width: var(--font-size-sm);
    height: var(--font-size-sm);
    margin-left: var(--spacing-xs);
  }
  .projectCard:hover .projectName svg {
    transform: translate(2px, -2px);
    transition: all 0.3s ease;
  }
  .projectInfo p {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-light);
  }
  .preview img {
    height: var(--height-xxl);
    border: var(--color-text-unselect) 2px solid;
  }

  .projectSkills ul {
    display: flex;
    gap: var(--spacing-sm);
    padding: 0;
    list-style-type: none;
    margin-bottom: 0;
  }
  .projectSkills li {
    font-size: var(--font-size-xs);
    color: var(--color-text-bubble);
    background-color:rgba(237, 253, 252, 0.2);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 20px;
    margin: 0;
  }
</style>